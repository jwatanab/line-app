<!doctype html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
    .kaiwa {
      margin-bottom: 25px;
    }


    .kaiwa-img-left {
      margin: 0;
      float: left;
      width: 60px;
      height: 60px;
      margin-right: -70px;
    }


    .kaiwa-img-right {
      margin: 0;
      float: right;
      width: 60px;
      height: 60px;
      margin-left: -70px;
    }

    .kaiwa figure img {
      width: 100%;
      height: 100%;
      border: 1px solid #aaa;
      border-radius: 50%;
      margin: 0;
    }


    .kaiwa-img-description {
      padding: 15px 0 0;
      font-size: 10px;
      text-align: center;
      position: relative;
      bottom: 15px;
    }


    .kaiwa-text-right {
      position: relative;
      margin-left: 80px;
      padding: 10px;
      border-radius: 10px;
      background: #eee;
      margin-right: 12%;
      float: left;
    }


    .kaiwa-text-left {
      position: relative;
      margin-right: 80px;
      padding: 10px;
      border-radius: 10px;
      background-color: #9cd6e7;
      margin-left: 12%;
      float: right;
    }

    p.kaiwa-text {
      margin: 0 0 20px;
    }

    p.kaiwa-text:last-child {
      margin-bottom: 0;
    }


    .kaiwa-text-right:before {
      position: absolute;
      content: '';
      border: 10px solid transparent;
      top: 15px;
      left: -20px;
    }

    .kaiwa-text-right:after {
      position: absolute;
      content: '';
      border: 10px solid transparent;
      border-right: 10px solid #eee;
      top: 15px;
      left: -19px;
    }


    .kaiwa-text-left:before {
      position: absolute;
      content: '';
      border: 10px solid transparent;
      top: 15px;
      right: -20px;
    }

    .kaiwa-text-left:after {
      position: absolute;
      content: '';
      border: 10px solid transparent;
      border-left: 10px solid #9cd6e7;
      top: 15px;
      right: -19px;
    }


    .kaiwa:after,
    .kaiwa:before {
      clear: both;
      content: "";
      display: block;
    }

    .none {
      display: none;
    }
  </style>
</head>

<body>
  <div class="none ejsContent">
    <% for(var i in content){ %>
      <% var index = content[i] %>
        <div class="ejsContentName">
          <%= index.name %>
        </div>
        <div class="ejsContentCreate_at">
          <%= index.create_at %>
        </div>
        <div class="ejsContentText">
          <%= index.text %>
        </div>
        <div class="ejsContentObject">
          <%= index.object %>
        </div>
        <% } %>
  </div>
  <!--左からの吹き出し-->
  <div class=" kaiwa">
    <figure class="kaiwa-img-left ">
      <img src="/images/detail_line2.png">
      <figcaption class="kaiwa-img-description ">自分</figcaption>
    </figure>
    <div class="kaiwa-text-right ">
      <p class="kaiwa-text ">おいっすー！</p>
    </div>
  </div>
  <!--右からの吹き出し-->
  <div class="kaiwa ">
    <figure class="kaiwa-img-right ">
      <img src="/images/detail_line2.png" alt="no-img2 ">
      <figcaption class="kaiwa-img-description ">兄貴</figcaption>
    </figure>
    <div class="kaiwa-text-left ">
      <p class="kaiwa-text ">おいっすー！</p>
    </div>
  </div>
</body>
<script>
  var ejsContent = {};
  var details = "";
  var ejsContentName = document.getElementsByClassName('ejsContentName');
  var ejsContentText = document.getElementsByClassName('ejsContentText');
  var ejsContentObject = document.getElementsByClassName('ejsContentObject');
  var ejsContentCreate_at = document.getElementsByClassName('ejsContentCreate_at');
  var doc = document.getElementsByTagName('body')[0];
  ejsContent.ejsContentName = ejsContentName;
  ejsContent.ejsContentCreate_at = ejsContentCreate_at;
  ejsContent.ejsContentText = ejsContentText;
  ejsContent.ejsContentObject = ejsContentObject;
  for (var i = 1; i < ejsContent.ejsContentCreate_at.length; i++) {
    if (ejsContent.ejsContentText[i].innerHTML.indexOf("__LINE_TOKEN__") == -1) {
      details += "<div class='kaiwa'><figure class='kaiwa-img-right'><img src='/images/detail_line2.png' alt='./no-img2'>";
      details += "<figcaption class='kaiwa-img-description'>" + ejsContent.ejsContentName[i].innerHTML + "</figcaption>";
      details += "</figure><div class='kaiwa-text-left'><p class='kaiwa-text'>"
      details += ejsContent.ejsContentText[i].innerHTML;
      details += "</p></div></div>";
    }
    if (ejsContent.ejsContentObject[i].innerHTML.indexOf("__LINE_TOKEN__") == -1) {
      details += "<div class='kaiwa'><figure class='kaiwa-img-left'><img src='/images/detail_line2.png' alt='./no-img2'>";
      details += "<figcaption class='kaiwa-img-description'>" + ejsContent.ejsContentName[i].innerHTML + "</figcaption>";
      details += "</figure><div class='kaiwa-text-right'><p class='kaiwa-text'>"
      details += ejsContent.ejsContentObject[i].innerHTML;
      details += "</p></div></div>";
    }
  }
  doc.innerHTML += details;
</script>

</html>